@model IEnumerable<Projeto1_IF.Models.TbPacienteDTO>

@{
    ViewData["Title"] = "Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pacientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle">Cadastrar Paciente</i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeResponsavel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelResidencial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelComercial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelCelular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atleta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gestante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCidade)
            </th>
            <th style="width: 350px;">
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeResponsavel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etnia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelResidencial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelComercial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelCelular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atleta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gestante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCidade)
            </td>
            <td class ="text-center">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.IdPaciente" class="btn btn-success btn-sm" title="Editar">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdPaciente" class="btn btn-warning btn-sm" title="Detalhes">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdPaciente" class="btn btn-danger btn-sm" title="Excluir">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
