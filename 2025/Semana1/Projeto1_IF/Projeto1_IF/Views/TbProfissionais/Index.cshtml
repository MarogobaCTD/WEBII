@model IEnumerable<Projeto1_IF.Models.TbProfissionalDTO>

@{
    ViewData["Title"] = "Profissional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profissionais</h1>
@*Valida se o usuário poderá inserir outros Médicos ou Nutricionistas*@
@if ((User.IsInRole("Medico") || User.IsInRole("Nutricionista")) && (!User.IsInRole("GerenteGeral") && 
     !User.IsInRole("GerenteMedico") && !User.IsInRole("GerenteNutricionista")))
{
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle">Cadastrar Profissional</i></a>
    </p>
}

<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePlano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrmCrn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ddd1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ddd2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th style="width: 250px;">
                Ações   
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.NomePlano)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CrmCrn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ddd1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ddd2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td class="text-center">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.IdProfissional" class="btn btn-success btn-sm" title="Editar">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdProfissional" class="btn btn-warning btn-sm" title="Detalhes">
                        <i class="bi bi-eye"></i>
                    </a>
                    @*Validar a role do usuário para ver se tem permissão para excluir*@
                    @if (User.IsInRole("GerenteGeral") || User.IsInRole("GerenteMedico") || User.IsInRole("GerenteNutricionista"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.IdProfissional" class="btn btn-danger btn-sm" title="Excluir">
                            <i class="bi bi-x-circle"></i>
                        </a>
                    }
                </div>               
            </td>
        </tr>
}
    </tbody>
</table>
